    <children>
      <ColorPicker fx:id="colourPicker" />
        <Label fx:id="label" prefHeight="25.0" prefWidth="100.0" text="Label" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
         <padding>
            <Insets left="10.0" />
         </padding>
        </Label>
    </children>
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="1.0" />
    </padding>
</fx:root>
